%h1 All Movies

%table#movies
	%thead
		%tr
			%th Movie Title
			%th Rating
			%th Release Date
			%th More Info
			%th Modify Movie
		%tbody
			- @movies.each do |movie|
				%tr 
					%td= movie.title
					%td= movie.rating
					%td= movie.release_date.strftime("%B %d, %Y")
					%td= link_to "More about #{movie.title}", movie_path(movie)
					%td
						= link_to "Edit", edit_movie_path(movie)
						= link_to "Delete", movie_path(movie), :method => :delete, :data => {confirm: "Are you sure you want to delete '#{movie.title}'?"}

= link_to "Add new movie", new_movie_path